# Variáveis de Ambiente para Produção (Vercel)
# Configure estas variáveis no Vercel Dashboard

# Ambiente
FLASK_ENV=production
FLASK_CONFIG=production

# Chave secreta (MUDE PARA UMA SENHA FORTE!)
SECRET_KEY=sua-chave-super-secreta-aqui-mude-isso

# Database (Vercel Postgres ou outro)
DATABASE_URL=postgresql://user:password@host:5432/database

# CORS Origins (SEU DOMÍNIO VERCEL)
CORS_ORIGINS=https://lista-kaizen-app.vercel.app,https://seu-dominio-custom.com

# JWT
JWT_SECRET_KEY=sua-chave-jwt-secreta-aqui

# Flask
FLASK_APP=run.py
FLASK_DEBUG=0
